pipeline{
    agent any

    parameters{
        string(name:'tomcat_staging',defaultValue:'54.237.196.185',description:'staging server')
        string(name:'tomcat_prod',defaultValue:'34.207.246.51',description:'production server')
    }

    triggers{
        pollSCM('* * * * *')
    }

    stages{
        stage('Build'){
            steps{
                bat 'mvn clean package'
            }
            post{
                success{
                    echo 'Now Archiving'
                    archiveArtifacts artifacts:'**/target/*.war'
                }
            }
        }

        stage('Deployments'){
            parallel{
                stage('Deploy to Staging'){
                    steps{
                        bat "pscp -i c:\\AWSCloudGuru\\CloudGuruTraining.ppk webapp\\target\\*.war ec2-user@${params.tomcat_staging}:/var/lib/tomcat/"
                    }
                    
                   
                }
                stage('Deploy to production'){
                    steps{
                        bat "pscp -i c:\\AWSCloudGuru\\CloudGuruTraining.ppk webapp\\target\\*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat/"
                    }                           
                }

            }
        }
    }
}